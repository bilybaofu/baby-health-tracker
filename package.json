{
  "name": "baby-health-tracker",
  "productName": "婴幼儿体检报告智能识别系统",
  "version": "1.0.1",
  "description": "基于WHO标准的可爱卡通版婴幼儿健康管理系统",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac", 
    "dist-linux": "electron-builder --linux",
    "dist-all": "electron-builder --win --mac --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yourname.baby-health-tracker",
    "productName": "婴幼儿体检系统",
    "directories": {
      "output": "dist"
    },
    "files": [
      "baby.html",
      "style.css", 
      "baby-tracker.js",
      "main.js",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.healthcare-fitness"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable", 
          "arch": ["x64", "ia32"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "婴幼儿体检系统"
    }
  },
  "devDependencies": {
    "electron": "^20.3.12",
    "electron-builder": "^23.6.0"
  }
}
