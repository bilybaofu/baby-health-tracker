{
  "name": "baby-health-tracker",
  "version": "11.0.0",
  "description": "婴幼儿健康跟踪系统 - 基于WHO 2006标准的智能生长发育分析工具（百度OCR增强版）",
  "main": "main.js",
  "scripts": {
    "start": "python -m http.server 8000",
    "dev": "python -m http.server 8080",
    "build": "echo 'Building project...' && echo 'Build completed!'",
    "test": "echo 'No tests specified'",
    "lint": "echo 'Linting JavaScript files...'",
    "validate": "echo 'Validating HTML and CSS...'",
    "serve": "npx serve .",
    "deploy": "echo 'Deploying to GitHub Pages...'"
  },
  "keywords": [
    "baby-health",
    "growth-tracking",
    "WHO-standards",
    "pediatric",
    "health-monitoring",
    "OCR",
    "baidu-ocr",
    "AI",
    "deepseek",
    "percentile-calculator",
    "growth-chart",
    "feeding-guide",
    "child-development"
  ],
  "author": {
    "name": "Baby Health Tracker Team",
    "email": "contact@babytracker.com",
    "url": "https://github.com/yourusername/baby-health-tracker"
  },
  "license": "MIT",
  "homepage": "https://yourusername.github.io/baby-health-tracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/baby-health-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/baby-health-tracker/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "serve": "^14.0.0",
    "http-server": "^14.1.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "config": {
    "version": "11.0.0",
    "codename": "BaiduOCR-Enhanced",
    "buildDate": "2025-05-27"
  },
  "features": {
    "ocrProvider": "Baidu OCR API",
    "aiProvider": "Deepseek API",
    "standardsUsed": "WHO 2006 Child Growth Standards",
    "dataStorage": "Local Browser Storage",
    "chartLibrary": "Chart.js",
    "supportedFormats": ["JPG", "PNG", "WEBP"],
    "languages": ["zh-CN", "en-US"]
  },
  "apiRequirements": {
    "baiduOCR": {
      "required": false,
      "description": "用于高精度图片文字识别",
      "endpoint": "https://aip.baidubce.com/rest/2.0/ocr/v1/accurate_basic",
      "documentation": "https://cloud.baidu.com/doc/OCR/index.html"
    },
    "deepseekAI": {
      "required": false,
      "description": "用于AI智能解析和喂养建议",
      "endpoint": "https://api.deepseek.com/v1/chat/completions",
      "documentation": "https://platform.deepseek.com/api-docs"
    }
  },
  "changelog": {
    "11.0.0": {
      "date": "2025-05-27",
      "changes": [
        "集成百度OCR API，替换本地Tesseract.js",
        "提升图片识别精度和速度",
        "优化API配置管理",
        "增强错误处理机制",
        "更新用户界面和提示信息"
      ]
    },
    "10.0.0": {
      "date": "2025-05-26",
      "changes": [
        "初始版本发布",
        "实现基础功能",
        "集成WHO 2006标准",
        "本地OCR识别功能"
      ]
    }
  }
}
